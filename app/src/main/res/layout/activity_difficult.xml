<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_difficult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/levelbg"
    tools:context="com.we4.wordolio.Difficult">
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/two"
        android:id="@+id/imageButton5"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButton4"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:onClick="two" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/one"
        android:id="@+id/imageButton4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:onClick="one"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/three"
        android:id="@+id/imageButton6"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/imageButton5"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:onClick="three"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/four"
        android:id="@+id/imageButton7"
        android:layout_below="@+id/imageButton5"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5"
        android:layout_marginTop="89dp"
        android:onClick="four" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/five"
        android:id="@+id/imageButton8"
        android:layout_below="@+id/imageButton7"
        android:layout_toLeftOf="@+id/imageButton7"
        android:layout_toStartOf="@+id/imageButton7"
        android:onClick="five" />
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="95dp"
        android:src="@drawable/scorebg"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/imageView8"
        android:background="@android:drawable/alert_dark_frame"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp"
        android:onClick="sb" />

</RelativeLayout>
